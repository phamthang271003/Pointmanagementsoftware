    public void init() {

        this.setSize(900, 600);
        this.setLocationRelativeTo(null);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

        menuBar = new JMenuBar();
        setJMenuBar(menuBar);

        Font menuFont = new Font("Arial", Font.PLAIN, 14);
