        chkGiangVien.setFont(menuFont);
        chkGiangVien.setForeground(fontColor);
        mnQuanLy.add(chkGiangVien);

        chkSinhVien = new JCheckBoxMenuItem("Quản lý sinh viên");
        chkSinhVien.setFont(menuFont);
        chkSinhVien.setForeground(fontColor);
        mnQuanLy.add(chkSinhVien);

        chkKhoa = new JCheckBoxMenuItem("Quản lý khoa");
        chkKhoa.setFont(menuFont);
        chkKhoa.setForeground(fontColor);
        mnQuanLy.add(chkKhoa);

        chkNganh = new JCheckBoxMenuItem("Quản lý ngành");
        chkNganh.setFont(menuFont);
        chkNganh.setForeground(fontColor);
        mnQuanLy.add(chkNganh);

